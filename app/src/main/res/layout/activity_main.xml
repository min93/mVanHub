<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="kmutnb.rattapon.chatupon.chaturaphon.vanhub.MainActivity"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linButtonMain2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickSignIn"
            android:text="Sign In"
            android:id="@+id/button"
            android:layout_weight="1"
            android:background="#ff3112"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#ffffff" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="clickSignUp"
            android:text="Sign Up"
            android:id="@+id/button2"
            android:layout_weight="1"
            android:background="#ffffff"
            android:textColor="#ff3112"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linButtonMain"
        android:layout_above="@+id/linButtonMain2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VanHub BKK"
            android:id="@+id/maintxt"
            android:layout_gravity="center_horizontal"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#ff3112" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/editText5"
                android:layout_weight="1"
                android:hint="Where are you go !"
                android:textStyle="italic" />

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="GO"
                android:id="@+id/button8"
                android:layout_weight="1"
                android:textColor="#ff5f02"
                android:textSize="20sp"
                android:textStyle="normal|bold"
                android:background="@android:color/transparent" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="จังหวัด"
            android:id="@+id/textView16"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:textColor="#ff3112" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/listView"
            android:layout_margin="10dp"
            android:background="@drawable/border" />
    </LinearLayout>

</RelativeLayout>
